<Window x:Class="MojsAjsli.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MojsAjsli.UI.Views"
        xmlns:converters="clr-namespace:MojsAjsli.UI.Converters"
        mc:Ignorable="d"
        Title="Mojs Ajsli - Kantyna na Rubieżach" 
        Height="900" Width="1600"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#3E2723">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <converters:TableStatusToColorConverter x:Key="TableStatusToColorConverter"/>
            <converters:OrderStateToColorConverter x:Key="OrderStateToColorConverter"/>
            <converters:PriceConverter x:Key="PriceConverter"/>
            <converters:TableStatusToTextConverter x:Key="TableStatusToTextConverter"/>
            <converters:CategoryToIconConverter x:Key="CategoryToIconConverter"/>
            <converters:CategoryToNameConverter x:Key="CategoryToNameConverter"/>
            <converters:CategoryToColorConverter x:Key="CategoryToColorConverter"/>
        </ResourceDictionary>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#5D4037" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Image Source="../Resources/logoa.png" Height="80" Margin="0,0,15,0" VerticalAlignment="Center"/>
                    <TextBlock Text="Mojs Ajsli" FontSize="24" FontWeight="Bold" 
                               Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock x:Name="CurrentTimeText" FontSize="16" Foreground="White" 
                               VerticalAlignment="Center" Margin="0,0,20,0"/>
                    <TextBlock x:Name="ActiveStrategyText" FontSize="14" Foreground="#BCAAA4" 
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <TabControl Grid.Row="1" Margin="10">
            
            <!-- Tab: Sala restauracyjna -->
            <TabItem Header="Sala">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Widok stolików -->
                    <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="5">
                        <StackPanel>
                            <TextBlock Text="Stoliki" Style="{StaticResource HeaderStyle}"/>
                            
                            <ItemsControl x:Name="TablesControl">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource TableStyle}"
                                                Background="{Binding Status, Converter={StaticResource TableStatusToColorConverter}}"
                                                MouseLeftButtonUp="Table_Click"
                                                Tag="{Binding Number}">
                                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                                <TextBlock FontWeight="Bold" Foreground="White" HorizontalAlignment="Center">
                                                    <TextBlock.Text>
                                                        <Binding Path="Number" StringFormat="Stolik {0}"/>
                                                    </TextBlock.Text>
                                                </TextBlock>
                                                <TextBlock Foreground="White" FontSize="12" HorizontalAlignment="Center">
                                                    <TextBlock.Text>
                                                        <Binding Path="Seats" StringFormat="{}{0} miejsc"/>
                                                    </TextBlock.Text>
                                                </TextBlock>
                                                <TextBlock Text="{Binding Status, Converter={StaticResource TableStatusToTextConverter}}" 
                                                           Foreground="White" FontSize="11"
                                                           HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            
                            <!-- Akcje stolika -->
                            <StackPanel Margin="0,20,0,0">
                                <TextBlock Text="Akcje stolika:" FontWeight="SemiBold" Margin="0,0,0,10"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Liczba gości:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    
                                    <!-- Kafelkowy wybór liczby gości -->
                                    <StackPanel Orientation="Horizontal">
                                        <Border x:Name="Guest1Tile" Background="#8D6E63" CornerRadius="8" Padding="15,10" Margin="5"
                                                Width="60" Height="60" Cursor="Hand" MouseLeftButtonUp="GuestCountTile_Click" Tag="1">
                                            <Border.Effect>
                                                <DropShadowEffect BlurRadius="5" ShadowDepth="2" Opacity="0.3"/>
                                            </Border.Effect>
                                            <TextBlock Text="1" FontSize="18" FontWeight="Bold" Foreground="White" 
                                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <Border x:Name="Guest2Tile" Background="#8D6E63" CornerRadius="8" Padding="15,10" Margin="5"
                                                Width="60" Height="60" Cursor="Hand" MouseLeftButtonUp="GuestCountTile_Click" Tag="2">
                                            <Border.Effect>
                                                <DropShadowEffect BlurRadius="5" ShadowDepth="2" Opacity="0.3"/>
                                            </Border.Effect>
                                            <TextBlock Text="2" FontSize="18" FontWeight="Bold" Foreground="White" 
                                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <Border x:Name="Guest3Tile" Background="#8D6E63" CornerRadius="8" Padding="15,10" Margin="5"
                                                Width="60" Height="60" Cursor="Hand" MouseLeftButtonUp="GuestCountTile_Click" Tag="3">
                                            <Border.Effect>
                                                <DropShadowEffect BlurRadius="5" ShadowDepth="2" Opacity="0.3"/>
                                            </Border.Effect>
                                            <TextBlock Text="3" FontSize="18" FontWeight="Bold" Foreground="White" 
                                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <Border x:Name="Guest4Tile" Background="#8D6E63" CornerRadius="8" Padding="15,10" Margin="5"
                                                Width="60" Height="60" Cursor="Hand" MouseLeftButtonUp="GuestCountTile_Click" Tag="4">
                                            <Border.Effect>
                                                <DropShadowEffect BlurRadius="5" ShadowDepth="2" Opacity="0.3"/>
                                            </Border.Effect>
                                            <TextBlock Text="4" FontSize="18" FontWeight="Bold" Foreground="White" 
                                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <TextBlock Text="Inna:" VerticalAlignment="Center" Margin="10,0,5,0"/>
                                        <TextBox x:Name="CustomGuestCountTextBox" Width="50" Height="30" 
                                                 VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                                                 FontSize="14" Text="" TextChanged="CustomGuestCount_Changed"/>
                                    </StackPanel>
                                </StackPanel>
                                <WrapPanel Margin="0,10,0,0">
                                    <Button Content="Zajmij stolik" 
                                            Command="{Binding TableVM.OccupyTableCommand}"
                                            Background="#D32F2F" Foreground="White" 
                                            Padding="15,8" Margin="5" BorderThickness="0" FontSize="14" 
                                            Cursor="Hand">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="5" 
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#C62828"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                    <Button Content="Zwolnij stolik" 
                                            Command="{Binding TableVM.FreeTableCommand}"
                                            Background="#4CAF50" Foreground="White" 
                                            Padding="15,8" Margin="5" BorderThickness="0" FontSize="14" 
                                            Cursor="Hand">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="5" 
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#388E3C"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                    <Button Content="Wyczyść stolik" 
                                            Command="{Binding TableVM.CleanTableCommand}"
                                            Background="#FFB300" Foreground="White" 
                                            Padding="15,8" Margin="5" BorderThickness="0" FontSize="14" 
                                            Cursor="Hand">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="5" 
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#FFA000"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </WrapPanel>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- Panel zamówienia -->
                    <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <StackPanel Grid.Row="0">
                                <TextBlock x:Name="SelectedTableText" Style="{StaticResource HeaderStyle}" 
                                           Text="Wybierz stolik"/>
                                <TextBlock x:Name="OrderStatusText" FontSize="14" Foreground="Gray"/>
                            </StackPanel>
                            
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Menu -->
                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock Text="Menu" Style="{StaticResource SubHeaderStyle}"/>
                                    
                                    <!-- Kafelkowy wybór kategorii -->
                                    <ItemsControl x:Name="CategoryTilesControl">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="{Binding Converter={StaticResource CategoryToColorConverter}}"
                                                        CornerRadius="8" Padding="10,8" Margin="3"
                                                        Width="85" Height="70" Cursor="Hand"
                                                        MouseLeftButtonUp="CategoryTile_Click"
                                                        Tag="{Binding}">
                                                    <Border.Effect>
                                                        <DropShadowEffect BlurRadius="5" ShadowDepth="2" Opacity="0.3"/>
                                                    </Border.Effect>
                                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                                        <TextBlock Text="{Binding Converter={StaticResource CategoryToIconConverter}}"
                                                                   FontSize="24" HorizontalAlignment="Center"/>
                                                        <TextBlock Text="{Binding Converter={StaticResource CategoryToNameConverter}}"
                                                                   FontSize="10" FontWeight="SemiBold" Foreground="White"
                                                                   HorizontalAlignment="Center" TextAlignment="Center"
                                                                   TextWrapping="Wrap" Margin="0,3,0,0"/>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <!-- Lista dań w wybranej kategorii -->
                                    <TextBlock x:Name="SelectedCategoryText" Text="Wszystkie dania"
                                               FontWeight="SemiBold" Margin="0,10,0,5"/>
                                    <ListBox x:Name="MenuListBox" Height="300"
                                             SelectedItem="{Binding OrderVM.SelectedMenuItem}"
                                             Style="{StaticResource ModernListBox}"
                                             ItemContainerStyle="{StaticResource ModernListBoxItem}">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0"
                                                               Text="{Binding Category, Converter={StaticResource CategoryToIconConverter}}"
                                                               FontSize="18" Margin="0,0,8,0"/>
                                                    <StackPanel Grid.Column="1">
                                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="13"/>
                                                        <TextBlock Text="{Binding Description}" FontSize="10" 
                                                                   Foreground="Gray" TextWrapping="Wrap"/>
                                                    </StackPanel>
                                                    <TextBlock Grid.Column="2"
                                                               Text="{Binding BasePrice, Converter={StaticResource PriceConverter}}"
                                                               FontWeight="Bold" Foreground="#4CAF50" FontSize="13"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                    
                                    <!-- Dodatki -->
                                    <TextBlock Text="Dodatki:" FontWeight="SemiBold" Margin="0,8,0,5" FontSize="12"/>
                                    <WrapPanel>
                                        <CheckBox x:Name="ExtraCheeseCheck" 
                                                  IsChecked="{Binding OrderVM.ExtraCheese}"
                                                  Content="Extra ser (+3 zł)" Margin="0,0,8,3" FontSize="11"/>
                                        <CheckBox x:Name="BaconCheck" 
                                                  IsChecked="{Binding OrderVM.Bacon}"
                                                  Content="Bekon (+5 zł)" Margin="0,0,8,3" FontSize="11"/>
                                        <CheckBox x:Name="SpicySauceCheck" 
                                                  IsChecked="{Binding OrderVM.SpicySauce}"
                                                  Content="Ostry sos (+2 zł)" Margin="0,0,8,3" FontSize="11"/>
                                        <CheckBox x:Name="GlutenFreeCheck" 
                                                  IsChecked="{Binding OrderVM.GlutenFree}"
                                                  Content="Bezglutenowe (+4 zł)" Margin="0,0,8,3" FontSize="11"/>
                                        <CheckBox x:Name="ExtraPortionCheck" 
                                                  IsChecked="{Binding OrderVM.ExtraPortion}"
                                                  Content="Duża porcja (+50%)" Margin="0,0,8,3" FontSize="11"/>
                                    </WrapPanel>
                                    
                                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                        <Button Content="Dodaj do zamówienia" 
                                                Command="{Binding OrderVM.AddToOrderCommand}"
                                                Style="{StaticResource SuccessButton}"/>
                                        <Button Content="Wyślij do kuchni" 
                                                Command="{Binding OrderVM.SubmitOrderCommand}"
                                                Style="{StaticResource PrimaryButton}"/>
                                    </StackPanel>
                                </StackPanel>
                                
                                <!-- Aktualne zamówienie -->
                                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                    <TextBlock Text="Bieżące zamówienie" Style="{StaticResource SubHeaderStyle}"/>
                                    <ListBox x:Name="CurrentOrderListBox" Height="350"
                                             Style="{StaticResource ModernListBox}"
                                             ItemContainerStyle="{StaticResource ModernListBoxItem}">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <StackPanel Grid.Column="0">
                                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="13"/>
                                                        <TextBlock Text="{Binding Description}" FontSize="10" 
                                                                   Foreground="Gray" TextWrapping="Wrap"/>
                                                    </StackPanel>
                                                    <TextBlock Grid.Column="1" 
                                                               Text="{Binding Price, Converter={StaticResource PriceConverter}}"
                                                               FontWeight="Bold" FontSize="13"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                    
                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                        <Button Content="Cofnij" 
                                                Command="{Binding OrderVM.UndoCommand}"
                                                Style="{StaticResource WarningButton}"
                                                x:Name="UndoButton" Padding="12,6" FontSize="12"/>
                                        <Button Content="Ponów" 
                                                Command="{Binding OrderVM.RedoCommand}"
                                                Style="{StaticResource WarningButton}"
                                                x:Name="RedoButton" Padding="12,6" FontSize="12"/>
                                        <Button Content="Usuń pozycję" 
                                                Command="{Binding OrderVM.RemoveFromOrderCommand}"
                                                CommandParameter="{Binding ElementName=CurrentOrderListBox, Path=SelectedItem}"
                                                Style="{StaticResource DangerButton}"
                                                Padding="12,6" FontSize="12"/>
                                    </StackPanel>
                                    
                                    <Border Background="#E3F2FD" CornerRadius="5" Padding="10" Margin="0,10,0,0">
                                        <StackPanel>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="Suma:" FontWeight="Bold" FontSize="16"/>
                                                <TextBlock x:Name="TotalPriceText" Grid.Column="1" 
                                                           FontWeight="Bold" FontSize="16" Foreground="#4CAF50"/>
                                            </Grid>
                                            <Grid Margin="0,5,0,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock x:Name="DiscountText" Text="" FontSize="12"/>
                                                <TextBlock x:Name="FinalPriceText" Grid.Column="1" 
                                                           FontWeight="Bold" FontSize="14" Foreground="#2196F3"/>
                                            </Grid>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </Grid>
                            
                            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0" Visibility="Collapsed">
                                <!-- Ten przycisk został przeniesiony wyżej -->
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>
            
            <!-- Tab: Kuchnia i Kelner -->
            <TabItem Header="Kuchnia i Kelner">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Sekcja Kuchni -->
                    <Border Grid.Row="0" Style="{StaticResource CardStyle}" Margin="5">
                        <StackPanel>
                            <TextBlock Text="Kuchnia" Style="{StaticResource HeaderStyle}"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Kolejka zamówień -->
                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock Text="Kolejka zamówień" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,5"/>
                                    <TextBlock x:Name="QueueCountText" Foreground="Gray" FontSize="11" Margin="0,0,0,5"/>
                                    
                                    <ListBox x:Name="KitchenQueueListBox" Height="180"
                                             Style="{StaticResource ModernListBox}"
                                             ItemContainerStyle="{StaticResource ModernListBoxItem}">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="3">
                                                    <StackPanel>
                                                        <TextBlock FontWeight="Bold" FontSize="11">
                                                            <Run Text="Stolik "/>
                                                            <Run Text="{Binding TableNumber}"/>
                                                        </TextBlock>
                                                        <TextBlock Text="{Binding TotalPrice, StringFormat='Wartość: {0:N2} zł'}" 
                                                                   FontSize="10" Foreground="Gray"/>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                    
                                    <Button Content="Rozpocznij przygotowanie" 
                                            Command="{Binding KitchenVM.StartPreparingCommand}"
                                            CommandParameter="{Binding ElementName=KitchenQueueListBox, Path=SelectedItem}"
                                            Style="{StaticResource PrimaryButton}"
                                            Margin="0,5,0,0" Padding="10,5" FontSize="12"/>
                                </StackPanel>
                                
                                <!-- W przygotowaniu -->
                                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                    <TextBlock Text="W przygotowaniu" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,5"/>
                                    <TextBlock x:Name="PreparingCountText" Foreground="Gray" FontSize="11" Margin="0,0,0,5"/>
                                    
                                    <ListBox x:Name="PreparingListBox" Height="180"
                                             Style="{StaticResource ModernListBox}"
                                             ItemContainerStyle="{StaticResource ModernListBoxItem}">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="#FFF3E0" CornerRadius="5" Padding="8">
                                                    <StackPanel>
                                                        <TextBlock FontWeight="Bold" FontSize="12">
                                                            <Run Text="Stolik "/>
                                                            <Run Text="{Binding TableNumber}"/>
                                                        </TextBlock>
                                                        <TextBlock Text="{Binding TotalPrice, StringFormat='Wartość: {0:N2} zł'}" 
                                                                   FontSize="10" Foreground="Gray" Margin="0,3,0,0"/>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                    
                                    <Button Content="Oznacz jako gotowe" 
                                            Command="{Binding KitchenVM.MarkReadyCommand}"
                                            CommandParameter="{Binding ElementName=PreparingListBox, Path=SelectedItem}"
                                            Style="{StaticResource SuccessButton}"
                                            Margin="0,5,0,0" Padding="10,5" FontSize="12"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                    <!-- Sekcja Kelnera -->
                    <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="5">
                        <StackPanel>
                            <TextBlock Text="Kelner" Style="{StaticResource HeaderStyle}"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Zamówienia gotowe do wydania -->
                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock Text="Gotowe do wydania" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,5"/>
                                    
                                    <ListBox x:Name="ReadyOrdersListBox" Height="180"
                                             Style="{StaticResource ModernListBox}"
                                             ItemContainerStyle="{StaticResource ModernListBoxItem}">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="#E8F5E9" CornerRadius="5" Padding="8">
                                                    <StackPanel>
                                                        <TextBlock FontWeight="Bold" FontSize="12">
                                                            <Run Text="Stolik "/>
                                                            <Run Text="{Binding TableNumber}"/>
                                                        </TextBlock>
                                                        <TextBlock Text="{Binding TotalPrice, StringFormat='Wartość: {0:N2} zł'}" 
                                                                   FontWeight="Bold" Foreground="#4CAF50" FontSize="11" Margin="0,3,0,0"/>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                    
                                    <Button Content="Dostarcz zamówienie" 
                                            Command="{Binding DeliverOrderCommand}"
                                            CommandParameter="{Binding ElementName=ReadyOrdersListBox, Path=SelectedItem}"
                                            Style="{StaticResource SuccessButton}"
                                            Margin="0,5,0,0" Padding="10,5" FontSize="12"/>
                                </StackPanel>
                                
                                <!-- Zamówienia dostarczone (do opłacenia) -->
                                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                    <TextBlock Text="Do opłacenia" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,5"/>
                                    
                                    <ListBox x:Name="DeliveredOrdersListBox" Height="100"
                                             SelectedItem="{Binding PaymentVM.SelectedOrder}"
                                             Style="{StaticResource ModernListBox}"
                                             ItemContainerStyle="{StaticResource ModernListBoxItem}">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="#FFF8E1" CornerRadius="5" Padding="6">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <StackPanel Grid.Column="0">
                                                            <TextBlock FontWeight="Bold" FontSize="11">
                                                                <Run Text="Stolik "/>
                                                                <Run Text="{Binding TableNumber}"/>
                                                            </TextBlock>
                                                        </StackPanel>
                                                        <TextBlock Grid.Column="1" Text="{Binding TotalPrice, StringFormat='{}{0:N2} zł'}"
                                                                   FontWeight="Bold" FontSize="12" Foreground="#FF9800"/>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                    
                                    <!-- Strategia cenowa i płatność skompresowane -->
                                    <Grid Margin="0,5,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                            <TextBlock Text="Strategia:" FontWeight="SemiBold" FontSize="11" Margin="0,0,0,3"/>
                                            <ComboBox x:Name="PricingStrategyComboBox" Style="{StaticResource ModernComboBox}"
                                                      SelectionChanged="PricingStrategy_Changed" FontSize="11" Padding="6,4"/>
                                        </StackPanel>
                                        
                                        <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                            <TextBlock Text="Płatność:" FontWeight="SemiBold" FontSize="11" Margin="0,0,0,3"/>
                                            <ComboBox x:Name="PaymentMethodComboBox" Style="{StaticResource ModernComboBox}" FontSize="11" Padding="6,4"/>
                                        </StackPanel>
                                    </Grid>
                                    
                                    <StackPanel x:Name="BlikPanel" Visibility="Collapsed" Margin="0,3,0,0">
                                        <TextBlock Text="Kod BLIK:" FontSize="10"/>
                                        <TextBox x:Name="BlikCodeTextBox" Style="{StaticResource ModernTextBox}" 
                                                 MaxLength="6" FontSize="11" Padding="6,4"/>
                                    </StackPanel>
                                    
                                    <Border Background="#E8F5E9" CornerRadius="5" Padding="8" Margin="0,5,0,0">
                                        <StackPanel>
                                            <TextBlock x:Name="PaymentSummaryText" FontWeight="Bold" FontSize="12"/>
                                            <TextBlock x:Name="PaymentDiscountText" FontSize="10" Foreground="Gray"/>
                                        </StackPanel>
                                    </Border>
                                    
                                    <Button Content="💳 Przyjmij płatność" 
                                            Command="{Binding PaymentVM.ProcessPaymentCommand}"
                                            Style="{StaticResource SuccessButton}"
                                            Margin="0,5,0,0" Padding="10,5" FontSize="12"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>
            
            <!-- Tab: Statystyki -->
            <TabItem Header="Statystyki">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- LEWA STRONA: Symulacja -->
                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        
                        

                        <!-- Parametry symulacji -->
                        <Border Style="{StaticResource CardStyle}" Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="Parametry symulacji" Style="{StaticResource SubHeaderStyle}"/>
                                <Grid Margin="0,10,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Kolumna lewa -->
                                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                        <TextBlock Text="Częstotliwość klientów" FontWeight="SemiBold" FontSize="12" Margin="0,0,0,5"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                            <TextBlock Text="Min interwał (min):" FontSize="11" VerticalAlignment="Center" Width="110"/>
                                            <TextBox x:Name="MinArrivalTextBox" Width="50" 
                                                     Text="{Binding SimulationVM.MinArrivalInterval, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                     VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="11"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,3,0,10">
                                            <TextBlock Text="Max interwał (min):" FontSize="11" VerticalAlignment="Center" Width="110"/>
                                            <TextBox x:Name="MaxArrivalTextBox" Width="50" 
                                                     Text="{Binding SimulationVM.MaxArrivalInterval, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                     VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="11"/>
                                        </StackPanel>
                                        
                                        <TextBlock Text="Rozmiar grup gości" FontWeight="SemiBold" FontSize="12" Margin="0,5,0,5"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                            <TextBlock Text="Min osób:" FontSize="11" VerticalAlignment="Center" Width="110"/>
                                            <TextBox x:Name="MinGroupSizeTextBox" Width="50" 
                                                     Text="{Binding SimulationVM.MinGroupSize, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                     VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="11"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                            <TextBlock Text="Max osób:" FontSize="11" VerticalAlignment="Center" Width="110"/>
                                            <TextBox x:Name="MaxGroupSizeTextBox" Width="50" 
                                                     Text="{Binding SimulationVM.MaxGroupSize, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                     VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="11"/>
                                        </StackPanel>
                                    </StackPanel>
                                    
                                    <!-- Kolumna prawa -->
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Cierpliwość klientów" FontWeight="SemiBold" FontSize="12" Margin="0,0,0,5"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                            <TextBlock Text="Min oczekiwanie:" FontSize="11" VerticalAlignment="Center" Width="110"/>
                                            <TextBox x:Name="MinWaitTimeTextBox" Width="50" 
                                                     Text="{Binding SimulationVM.MinWaitTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                     VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="11"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,3,0,10">
                                            <TextBlock Text="Max oczekiwanie:" FontSize="11" VerticalAlignment="Center" Width="110"/>
                                            <TextBox x:Name="MaxWaitTimeTextBox" Width="50" 
                                                     Text="{Binding SimulationVM.MaxWaitTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                     VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="11"/>
                                        </StackPanel>
                                        
                                        <TextBlock Text="Wydajność kuchni" FontWeight="SemiBold" FontSize="12" Margin="0,5,0,5"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                            <TextBlock Text="Równoległe zamówienia:" FontSize="11" VerticalAlignment="Center" Width="110"/>
                                            <TextBox x:Name="MaxConcurrentOrdersTextBox" Width="50" 
                                                     Text="{Binding SimulationVM.MaxConcurrentOrders, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                     VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="11"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                                
                                <Button Content="Zastosuj parametry" 
                                        Command="{Binding SimulationVM.ApplyParamsCommand}"
                                        Background="#2196F3" Foreground="White"
                                        Padding="15,8" Margin="0,15,0,0" BorderThickness="0" FontSize="12"
                                        Cursor="Hand" HorizontalAlignment="Center">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="5" 
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </StackPanel>
                        </Border>

                        
                        <!-- Symulacja - Panel kontrolny -->
                        <Border Style="{StaticResource CardStyle}" Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="Symulacja restauracji" Style="{StaticResource SubHeaderStyle}"/>
                                <StackPanel Orientation="Horizontal" Margin="0,10,0,5">
                                    <TextBlock Text="Czas trwania (min):" VerticalAlignment="Center" Margin="0,0,10,0" Width="120"/>
                                    <TextBox x:Name="SimulationDurationTextBox" Width="80" Text="120"
                                             VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,5,0,10">
                                    <TextBlock Text="Prędkość symulacji:" VerticalAlignment="Center" Margin="0,0,10,0" Width="120"/>
                                    <ComboBox x:Name="SimulationSpeedComboBox" Width="150">
                                        <ComboBoxItem Content="Szybka (100ms)" Tag="100"/>
                                        <ComboBoxItem Content="Normalna (500ms)" Tag="500" IsSelected="True"/>
                                        <ComboBoxItem Content="Wolna (1000ms)" Tag="1000"/>
                                        <ComboBoxItem Content="Bardzo wolna (2000ms)" Tag="2000"/>
                                    </ComboBox>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Button x:Name="RunSimulationButton" Content="▶ Start"
                                            Click="RunSimulationButton_Click"
                                            Background="#4CAF50" Foreground="White" Padding="20,10"
                                            Margin="0,0,10,0" BorderThickness="0" FontSize="14"
                                            Cursor="Hand">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="5" 
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                    <Button x:Name="StopSimulationButton" Content="⏹ Stop"
                                            Command="{Binding SimulationVM.StopCommand}"
                                            Background="#F44336" Foreground="White" Padding="20,10"
                                            Margin="0" BorderThickness="0" FontSize="14"
                                            Cursor="Hand" IsEnabled="False">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="5" 
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </StackPanel>
                                <TextBlock x:Name="SimStatusText" Text="Gotowa do uruchomienia"
                                           FontSize="12" Foreground="Gray" Margin="0,10,0,0" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                        <!-- Log symulacji -->
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="Log symulacji" Style="{StaticResource SubHeaderStyle}"/>
                                <ListBox x:Name="SimulationLogListBox" Height="350"
                                         Style="{StaticResource ModernListBox}" Margin="0,10,0,0">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}" FontSize="11" FontFamily="Consolas"/>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    
                    <!-- PRAWA STRONA: Statystyki -->
                    <StackPanel Grid.Column="1">
                        
                        <!-- Przychód -->
                        <Border Style="{StaticResource CardStyle}" Margin="0,0,0,10">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="Przychód symulacji" FontSize="14" Foreground="Gray"
                                           HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                <TextBlock x:Name="SimRevenueText" Text="0,00 zł"
                                           FontSize="28" FontWeight="Bold" 
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- Zamówienia -->
                        <Border Style="{StaticResource CardStyle}" Margin="0,0,0,10">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="Liczba zamówień" FontSize="14" Foreground="Gray"
                                           HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                <TextBlock FontSize="24" FontWeight="Bold" 
                                           HorizontalAlignment="Center">
                                    <Run x:Name="SimServedText" Text="0"/>
                                    <Run Text=" + " Foreground="Gray" FontSize="18"/>
                                    <Run x:Name="SimLostText" Text="0" />
                                </TextBlock>
                                <TextBlock Text="(obsłużeni + utraceni)" FontSize="10" Foreground="Gray"
                                           HorizontalAlignment="Center" Margin="0,3,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Średnia wartość -->
                        <Border Style="{StaticResource CardStyle}" Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="Średnia zamówienia" FontSize="14" Foreground="Gray"
                                           HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                <TextBlock FontSize="24" FontWeight="Bold" 
                                           HorizontalAlignment="Center">
                                    <Run Text="{Binding SimulationVM.TotalRevenue, FallbackValue='0,00 zł'}"/>
                                </TextBlock>
                                <TextBlock x:Name="SimAverageOrderText" Text="0,00 zł"
                                           FontSize="24" FontWeight="Bold" Foreground="#FF9800"
                                           HorizontalAlignment="Center" Visibility="Collapsed"/>
                            </StackPanel>
                        </Border>

                        <!-- Obsłużeni goście -->
                        <Border Style="{StaticResource CardStyle}" Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="Obsłużeni goście" FontSize="14" Foreground="Gray"
                                           HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding ElementName=SimServedText, Path=Text}"
                                               FontSize="32" FontWeight="Bold" Foreground="#4CAF50"/>
                                    <TextBlock Text=" osób" FontSize="16" Foreground="Gray" 
                                               VerticalAlignment="Bottom" Margin="5,0,0,8"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Utraceni goście -->
                        <Border Style="{StaticResource CardStyle}" Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="Utraceni goście" FontSize="14" Foreground="Gray"
                                           HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding ElementName=SimLostText, Path=Text}"
                                               FontSize="32" FontWeight="Bold" Foreground="#F44336"/>
                                    <TextBlock Text=" osób" FontSize="16" Foreground="Gray" 
                                               VerticalAlignment="Bottom" Margin="5,0,0,8"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Skuteczność -->
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="Skuteczność obsługi" FontSize="14" Foreground="Gray"
                                           HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                <TextBlock x:Name="SimServiceRateText" Text="0%"
                                           FontSize="28" FontWeight="Bold" 
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
        
        <!-- Footer / Status Bar -->
        <Border Grid.Row="2" Background="#4E342E" Padding="15,10">
            <!-- Pusty footer -->
        </Border>
    </Grid>
</Window>
